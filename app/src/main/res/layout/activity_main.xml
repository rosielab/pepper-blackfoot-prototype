<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/playButton"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="222dp"
        android:background="#2196F3"
        android:backgroundTint="#43B5F4"
        android:fontFamily="@font/nunito_bold"
        android:onClick="playButtonClick"
        android:text="Play"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        android:theme="@style/Theme.MaterialComponents"
        android:typeface="normal"
        android:visibility="visible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@id/mainmenu"
        app:layout_constraintStart_toStartOf="@id/mainmenu"
        app:layout_constraintTop_toTopOf="@id/mainmenu"
        tools:text="Play"
        tools:visibility="visible" />

    <Button
        android:id="@+id/learnButton"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:background="#2196F3"
        android:backgroundTint="#43B5F4"
        android:fontFamily="@font/nunito_bold"
        android:onClick="playButtonClick"
        android:text="Learn"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/playButton"
        app:layout_constraintStart_toStartOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        tools:text="Learn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:background="#2196F3"
        android:backgroundTint="#43B5F4"
        android:fontFamily="@font/nunito_bold"
        android:onClick="playButtonClick"
        android:text="Test"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/learnButton"
        app:layout_constraintStart_toStartOf="@+id/learnButton"
        app:layout_constraintTop_toBottomOf="@+id/learnButton"
        tools:text="Test"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/mainmenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/welcomeTextBox"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="Welcome!"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/mainmenu"
        app:layout_constraintEnd_toStartOf="@+id/testButton"
        app:layout_constraintStart_toStartOf="@id/mainmenu"
        tools:text="Welcome!"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>