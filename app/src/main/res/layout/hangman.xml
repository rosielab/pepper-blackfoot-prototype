<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FC5EF">

    <TextView
        android:id="@+id/hangmanText"
        android:layout_width="854dp"
        android:layout_height="76dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="341dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Blackfoot Word"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/incorrectLettersText"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginStart="376dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="378dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Incorrect Letters"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangmanText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/incorrectLettersList"
        android:layout_width="755dp"
        android:layout_height="34dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="156dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incorrectLettersText"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/flowerhappy"
        android:layout_width="193dp"
        android:layout_height="262dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangmanText"
        app:layout_constraintVertical_bias="0.979"
        app:srcCompat="@drawable/flowerhappy" />

    <ImageView
        android:id="@+id/flowerok"
        android:layout_width="231dp"
        android:layout_height="286dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:rotationY="-182"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangmanText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/flowerok" />

    <ImageView
        android:id="@+id/flowersad"
        android:layout_width="215dp"
        android:layout_height="296dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/incorrectLettersText"
        app:layout_constraintTop_toBottomOf="@+id/hangmanText"
        app:srcCompat="@drawable/flowersad" />

    <ImageView
        android:id="@+id/flowerrip"
        android:layout_width="352dp"
        android:layout_height="150dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/flowersad"
        app:layout_constraintStart_toEndOf="@+id/flowerok"
        app:layout_constraintTop_toBottomOf="@+id/incorrectLettersList"
        app:srcCompat="@drawable/flowerrip" />
</androidx.constraintlayout.widget.ConstraintLayout>